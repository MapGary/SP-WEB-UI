    <test name="Браузер Chrome">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.AuthLoginTest"/>
            <class name="tests.SecuritySqlInjectionTest"/>
            <class name="tests.SetNewPasswordTest"/>
            <class name="tests.TimeIntervalPannelTest"/>
            <class name="tests.SchemaTest"/>
            <class name="tests.MagazineTest"/>
        </classes>
    </test>

